[user]
  name = Borey
  email = lim.borey@gmail.com

[alias]
  serve = !git daemon --reuseaddr --verbose --base-path=. --export-all ./.git
  aa = add -A
  st = status
  ci = commit
  br = branch
  co = checkout
  df = diff
  dc = diff --cached
  l = log --graph --decorate --pretty=oneline --abbrev-commit --date=relative --color -n 20
  lg = log --graph --decorate --pretty=oneline --abbrev-commit --all --color
  lgp = log -p
  ls = ls-file
  graph = log --graph --date-order -C -M --pretty=format:\"<%h> %ad [%an] %Cgreen%d%Creset %s\" --all --date=short
  cleanup = remote prune

[core]
  editor = vim
  autocrtl = input
  # insanely beautiful diffs
  pager = bash -lc 'diff-highlight | strip_diff_leading_symbols | less -r' -

[github]
  user = borey
  token =

[merge]
  tool = vimdiff
[push]
  default = simple
[heroku]
  account = personal
[rerere]
  enable = true

[color]
  ui = always

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[color "diff-highlight"]
  oldNormal = "red bold"
  oldHighlight = "red bold 52"
  newNormal = "green bold"
  newHighlight = "green bold 22"
